type User {
  id: ID! @unique
  userName: String! @unique
  email: String! @unique
  firstName: String @default(value:"")
  lastName: String @default(value:"")
  bio: String
  posts: [Post!]!
  likes: [Like!]!
  comments: [Comment!]!
  followers: [User!]! @relation(name: "FollowRelation")
  followings: [User!]! @relation(name: "FollowRelation")
  rooms:[Room!]!
}
 
type Post{
  id: ID! @unique
  location: String
  caption: String!
  user: User!
  files: [File!]!
  likes: [Like!]!
  comments: [Comment!]!
}

type Like{
  id: ID! @unique
  user: User!
  post: Post!

}

type Comment{
  id: ID! @unique
  text: String!
  user: User!
  post: Post!

}

type File {
  id: ID! @unique
  url: String!
  post: Post!

}

type Room {
  id: ID! @unique
  participants: [User!]!
  messages: [Message!]!
}

type Message{
  id:ID! @unique
  text: String! 
  from: User!  @relation(name:"From")
  to: User! @relation(name:"To")
}